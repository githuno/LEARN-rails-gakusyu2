.container
  %h1 いいね数ランキング
  .list-group
    - @posts.each_with_index do |post, index|
      - if index < 3
        .card.mb-3.border-primary
          .card-header.bg-primary.text-white
            %h2
              = "#{index + 1}位: 「#{post.content}」 (いいね数: #{post.likes_count})"
          .card-body
            %strong
              = "#{post.user.username}さんによる#{post.created_at.strftime('%Y年%m月%d日 %H:%M')}の投稿"
            = link_to '投稿を見る', @app_link + "timeline?post=#{post.id}", class: 'btn btn-primary mt-2'
      - else
        .card.mb-3
          .card-header
            %strong
              = "#{index + 1}位: 「#{post.content}」 (いいね数: #{post.likes_count})"
          .card-body
            %p
              = "#{post.user.username}さんによる#{post.created_at.strftime('%Y年%m月%d日 %H:%M')}の投稿"
            = link_to '投稿を見る', @app_link + "timeline?post=#{post.id}", class: 'btn btn-secondary mt-2'
