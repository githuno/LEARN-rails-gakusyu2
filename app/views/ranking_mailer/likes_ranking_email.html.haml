.container
  %h1 いいね数ランキング
  .list-group
    - @posts.each_with_index do |post, index|
      - if index < 3
        .card.mb-3.border-primary
          .card-header.bg-primary.text-white.d-flex.justify-content-between.align-items-center
            %span.d-inline
              %h2.d-inline
                = "#{index + 1}位: 「#{post.content}」"
              %p.d-inline.ml-2
                = "いいね: #{post.likes_count}"
          .card-body.d-flex.justify-content-between.align-items-center
            %strong
              = "#{post.user.username}さんによる#{post.created_at.strftime('%Y年%m月%d日 %H:%M')}の投稿"
            .btn.ml-auto
              = link_to '投稿を見る', @app_link + "timeline?post=#{post.id}", class: 'btn btn-primary mt-2'
      - else
        .card.mb-3
          .card-header.d-flex.justify-content-between.align-items-center
            %span.d-inline
              %strong.d-inline
                = "#{index + 1}位: 「#{post.content}」"
              %p.d-inline.ml-2
                = "いいね: #{post.likes_count}"
          .card-body.d-flex.justify-content-between.align-items-center
            %p
              = "#{post.user.username}さんによる#{post.created_at.strftime('%Y年%m月%d日 %H:%M')}の投稿"
            .btn.ml-auto
              = link_to '投稿を見る', @app_link + "timeline?post=#{post.id}", class: 'btn btn-secondary mt-2'
